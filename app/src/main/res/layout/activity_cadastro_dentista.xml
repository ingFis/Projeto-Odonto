<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroDentistaActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Cadastro de Dentistas"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#136178"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Nome do dentista" />

    <EditText
        app:layout_constraintTop_toBottomOf="@id/txtNome"
        android:id="@+id/txtCro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="CRO do dentista" />

    <EditText
        app:layout_constraintTop_toBottomOf="@id/txtCro"
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="E-mail do dentista" />

    <EditText
        app:layout_constraintTop_toBottomOf="@id/txtEmail"
        android:id="@+id/txtTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:hint="Telefone do dentista" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Cadastrar"
        android:background="@drawable/buttom_padrao_01"/>
</LinearLayout>